{
  "name": "terminal42/isotope_ooxml_document",
  "type": "contao-bundle",
  "description": "OOXML Office Documents bundle for Isotope eCommerce",
  "license": "MIT",
  "authors": [
    {
      "name": "terminal42 gmbh",
      "homepage": "https://www.terminal42.ch"
    }
  ],
  "autoload": {
    "psr-4": {
      "Terminal42\\IsotopeOoxmlDocument\\": "src"
    }
  },
  "require": {
    "php": "^8.1",
    "contao/core-bundle": "^4.13",
    "isotope/isotope-core": "^2.6",
    "phpoffice/phpword": "^1.1",
    "symfony/config": "^5.4",
    "symfony/dependency-injection": "^5.4",
    "symfony/http-kernel": "^5.4"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.7",
    "terminal42/contao-build-tools": "dev-main"
  },
  "extra": {
    "contao-manager-plugin": "Terminal42\\IsotopeOoxmlDocument\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": false,
      "php-http/discovery": false,
      "contao/manager-plugin": false,
      "contao-community-alliance/composer-plugin": false,
      "terminal42/contao-build-tools": true
    }
  }
}